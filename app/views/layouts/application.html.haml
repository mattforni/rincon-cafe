<!DOCTYPE html>
%html
  = render partial: 'application/head'
  %body
    = handle_toast

    #header
      #home
        = link_to image_tag('icons/queue.png', size: '25x25'), root_path
      - if !@title.nil?
        #title=@title
      #logout
        = logout_button

    #content
      = yield

    = render partial: 'application/copyright'

